{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Nova",

  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "node",

    "newLine": "lf",
    "strict": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "noEmit": true,

    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "examples"]
}
